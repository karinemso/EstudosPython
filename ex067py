while True:
    num = int(input('Digite um nÃºmero e gere sua tabuada: '))
    if num < 0:
        break
    for c in range(1,11):
        resultado = num * c
        if c == 1:
         print('-=-'*4)
        print('{} X {} = {}'.format(num,c,resultado))
        if c == 10:
            print('-=-'*4)
    
print('Gerador de tabuadas finalizado! Volte sempre!')